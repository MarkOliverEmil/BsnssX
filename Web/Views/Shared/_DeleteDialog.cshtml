@model DeleteDialogModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">@Model.Title</h5>
            <div class="col-1">
                <a asp-action="" data-dismiss="modal">
                    <i class="bi bi-x-circle ms-icon-normal"></i>
                </a>
            </div>
        </div>
        <div class="modal-body">
            @Model.Text
        </div>
        <div class="modal-footer">
            <a asp-action="@Model.AspAction" asp-controller="@Model.AspController" asp-route-id="@Model.Id">
                <i class="bi bi-trash3 ms-icon-normal" data-toggle="tooltip" title="@Model.Tooltip"></i>
            </a>
        </div>
    </div>
</div>