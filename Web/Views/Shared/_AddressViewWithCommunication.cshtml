@model BsnssX.Core.Models.Address

<table class="table  table-striped table-hover table-borderless">
    <tbody>
        <tr>
            <td class="text-right">Company</td>
            @if (string.IsNullOrWhiteSpace(Model.Name2))
            {
                <td class="font-weight-bold">@Html.DisplayFor(model => model.Name)</td>
            }
            else
            {
                <td class="font-weight-bold">
                    @Html.DisplayFor(model => model.Name)<br />
                    @Html.DisplayFor(model => model.Name2)
                </td>
            }
        </tr>
        <tr>
            <td class="text-right">Address</td>
            <td>
                @Html.DisplayFor(model => model.AddressLine1) <br />
                @Html.DisplayFor(model => model.AddressLine2)<br />
                @Html.DisplayFor(model => model.AddressLine3)<br />
                @Html.DisplayFor(model => model.Country)
            </td>
        </tr>
