@model Web.Models.TaxCalcModel

@{
    ViewData["Title"] = "Calc";
}

<h1>Calc</h1>

<h4>TaxCalcModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Income" class="control-label"></label>
                <input asp-for="Income" class="form-control" />
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses" class="control-label"></label>
                <input asp-for="Expenses" class="form-control" />
                <span asp-validation-for="Expenses" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Social Security</label>
                <p>@Html.DisplayFor(model => model.SocialSecurity) €</p>
                <br />
                <label class="control-label">Tax</label>
                <p>@Html.DisplayFor(model => model.Tax) €</p>
                <br />
                <label class="control-label">Netto</label>
                <p>@Html.DisplayFor(model => model.Netto) €</p>
                <br />

                <label class="control-label">%</label>
                <p>@Html.DisplayFor(model => model.PercentageString)</p>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate Tax" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
